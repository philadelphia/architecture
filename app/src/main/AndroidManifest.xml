<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.delta.smt">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- welcome activity -->

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--login activity-->
        <activity
            android:name=".ui.login.LoginActivity"
            android:screenOrientation="portrait" />

        <!--main activity-->
        <activity
            android:name=".StartActivity"
            android:screenOrientation="portrait" />

        <!--StorageWarningActivity  -->
        <activity
            android:name=".ui.storage_manger.StorageWarningActivity"
            android:screenOrientation="portrait" />

        <!--production warning activity-->
        <activity android:name=".ui.production_warning.mvp.view.ProductionLineActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ui.feederCacheRegion.FeederCacheRegionActivity"
            android:label="@string/title_activity_ware_house_management"
            android:theme="@style/AppTheme">
        </activity>
    </application>
</manifest>