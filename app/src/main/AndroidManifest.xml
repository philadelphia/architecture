<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.delta.smt">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- welcome activity -->
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--login activity-->
        <activity
            android:name=".ui.login.LoginActivity"
            android:screenOrientation="portrait" />

        <!--main activity-->
        <activity
            android:name=".StartActivity"
            android:screenOrientation="portrait" />

        <!--StorageWarningActivity  -->
        <activity
            android:name=".ui.storage_manger.StorageWarningActivity"
            android:screenOrientation="portrait" />

        <!--production warning activity-->
        <activity
            android:name=".ui.production_warning.mvp.view.ProduceLineActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.production_warning.mvp.view.ProduceWarningActivity"
            android:screenOrientation="portrait" />


        <activity
            android:name=".ui.feederCacheRegion.FeederCacheRegionActivity"
            android:label="@string/title_activity_feeder_cache_region"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.feederwarning.FeederWarningActivity"
            android:label="@string/title_activity_feeder_warning">
        </activity><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
    </application>

</manifest>