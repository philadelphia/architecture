<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rl_item"
                android:layout_marginTop="20px"
                android:layout_marginRight="20px"
                android:layout_marginLeft="20px"
                android:background="@drawable/card_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:textColor="@android:color/black"
        android:text="贴片机-卡料故障"
        android:textSize="40px"
        android:padding="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_produce_line"
        android:textColor="@android:color/black"
        android:text="产线：H13"
        android:layout_below="@+id/tv_title"
        android:textSize="40px"
        android:padding="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_word_code"
            android:textColor="@android:color/black"
            android:text="制程：叠送一体机"
            android:layout_below="@+id/tv_produce_line"
            android:textSize="40px"
            android:padding="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_material_station"
            android:textColor="@android:color/black"
            android:text="料站：06T022"
            android:layout_below="@+id/tv_word_code"
            android:textSize="40px"
            android:padding="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_breakdown_info"
            android:textColor="@android:color/black"
            android:text="故障信息：卡料故障"
            android:layout_below="@+id/tv_material_station"
            android:textSize="40px"
            android:padding="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--<TextView-->
            <!--android:id="@+id/info_text_6"-->
            <!--android:text="第六行数据"-->
            <!--android:layout_below="@+id/info_text_5"-->
            <!--android:textSize="12sp"-->
            <!--android:padding="1dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->
<!--这里右边的倒数计我是默认和左边的第三个和第四个高度保持一致的，数据少可自行更改-->
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_6"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/time_remain"
            android:layout_gravity="center"
            android:text="故障持续时间："
            android:singleLine="true"
            android:textColor="#ff0000"
            android:textSize="40px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <com.delta.libs.CountTimeView
            android:id="@+id/cv_countView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            app:isCountUp="true"
            app:isShowDay="true"
            app:isShowHour="true"
            app:isShowMillisecond="false"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:suffixDay="天"
            app:suffixDayRightMargin="10px"
            app:suffixGravity="center"
            app:suffixHour=":"
            app:suffixMinute=":"
            app:suffixTextColor="#e61010"
            app:suffixTextSize="15sp"
            app:timeTextColor="#e60b0b"
            app:timeTextSize="20sp" />
    </LinearLayout>

</RelativeLayout>