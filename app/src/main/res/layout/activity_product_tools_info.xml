<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_back"
    android:orientation="vertical">

    <include layout="@layout/appbar" />

    <com.delta.commonlibs.widget.statusLayout.StatusLayout
        android:id="@+id/ProductToolStatusLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="40px"
                android:text="@string/WorkNumberPlus"
                android:textColor="#333333"
                android:textSize="40px" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="520px"
                android:layout_marginTop="-50px"
                android:text="@string/MainBoard"
                android:textColor="#333333"
                android:textSize="40px" />

            <TextView
                android:id="@+id/ProductToolsWorkItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180px"
                android:layout_marginTop="-50px"
                android:text="2314123"
                android:textColor="#333333"
                android:textSize="40px" />

            <TextView
                android:id="@+id/MainBroad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="620px"
                android:layout_marginTop="-50px"
                android:text="2314123"
                android:textColor="#333333"
                android:textSize="40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="30px"
                android:text="@string/LittleBoard"
                android:textColor="#333333"
                android:textSize="40px" />

            <TextView
                android:id="@+id/LittleBroad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140px"
                android:layout_marginTop="-50px"
                android:text="2314123"
                android:textColor="#333333"
                android:textSize="40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="520px"
                android:layout_marginTop="-50px"
                android:text="面别:"
                android:textColor="#333333"
                android:textSize="40px" />

            <TextView
                android:id="@+id/Cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="620px"
                android:layout_marginTop="-50px"
                android:text="A"
                android:textColor="#333333"
                android:textSize="40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="30px"
                android:text="线别:"
                android:textColor="#333333"
                android:textSize="40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="520px"
                android:layout_marginTop="-50px"
                android:text="PWB料號:"
                android:textColor="#333333"
                android:textSize="40px" />

            <TextView
                android:id="@+id/Line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140px"
                android:layout_marginTop="-50px"
                android:text="H-03"
                android:textColor="#333333"
                android:textSize="40px" />

            <TextView
                android:id="@+id/PWB_Code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="715px"
                android:layout_marginTop="-50px"
                android:text="2314123"
                android:textColor="#333333"
                android:textSize="40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="30px"
                android:text="PCBCODE:"
                android:textColor="#333333"
                android:textSize="40px" />

            <TextView
                android:id="@+id/PCBCODE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="250px"
                android:layout_marginTop="-50px"
                android:text="1234"
                android:textColor="#333333"
                android:textSize="40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35px"
                android:layout_marginTop="30px"
                android:text="治具二维码:"
                android:textColor="#333333"
                android:textSize="40px" />

            <EditText
                android:hint="请扫描"
                android:textColorHint="#428bca"
                android:id="@+id/ProductInfoBarCode"
                android:layout_width="600px"
                android:layout_height="55px"
                android:layout_marginLeft="280px"
                android:layout_marginTop="-50px"
                android:background="@drawable/ed_back_white"
                android:focusable="false" />

            <android.support.v7.widget.RecyclerView

                android:id="@+id/ProductInfoRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="800px"
                android:layout_marginTop="80px">

            </android.support.v7.widget.RecyclerView>

            <Button
                android:id="@+id/confirm"
                android:layout_width="199px"
                android:layout_height="100px"
                android:layout_gravity="center_horizontal|bottom"
                android:background="#428bca"
                android:text="@string/confirm"
                android:textColor="#ffffff"
                android:textSize="40px" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.delta.commonlibs.widget.statusLayout.StatusLayout>
</com.zhy.autolayout.AutoLinearLayout>