<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rl_item"
                android:layout_marginTop="10dp"
                android:background="@drawable/card_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:textColor="#000000"
        android:id="@+id/tv_title"
        android:text="第一行数据"
        android:textSize="15dp"
        android:padding="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_material_station"
        android:textColor="#000000"
        android:text="第三行数据"
        android:textSize="15dp"
        android:padding="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_line"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/tv_add_count"
        android:textColor="#000000"
        android:text="第四行数据"
        android:layout_below="@+id/tv_material_station"
        android:textSize="15dp"
        android:padding="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--这里右边的倒数计我是默认和左边的第三个和第四个高度保持一致的，数据少可自行更改-->
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/time_remain"
            android:textColor="#000000"
            android:text="上线剩余时间："
            android:textSize="20dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

        <cn.iwgang.countdownview.CountdownView
            android:id="@+id/cv_countdownView"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="10dp"
            app:isShowMillisecond="true"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:suffixGravity="center"
            app:suffixTextColor="#000000"
            app:suffixTextSize="15sp"
            app:timeTextColor="#000000"
            app:timeTextSize="30sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_line"
        android:text="第二行数据"
        android:textColor="#000000"
        android:textSize="15dp"
        android:padding="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>