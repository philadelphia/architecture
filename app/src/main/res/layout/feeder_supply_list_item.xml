<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/rl_item"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="15dp"
        android:background="@color/cardview_shadow_end_color"
        android:layout_margin="3dp"
        android:padding="8dp"
        android:clickable="true"
        android:elevation="1dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/info_text"
            android:text="第一行数据"
            android:textSize="12sp"
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/info_text_2"
            android:text="第二行数据"
            android:layout_below="@+id/info_text"
            android:textSize="12sp"
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/info_text_3"
                android:text="第三行数据"
                android:layout_below="@+id/info_text_2"
                android:textSize="12sp"
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/info_text_4"
                android:text="第四行数据"
                android:layout_below="@+id/info_text_3"
                android:textSize="12sp"
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

<!--这里右边的倒数计我是默认和左边的第三个和第四个高度保持一致的，数据少可自行更改-->
            <cn.iwgang.countdownview.CountdownView
                android:id="@+id/cv_countdownViewTest"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                app:isShowDay="false"
                app:isShowHour="true"
                app:isShowMillisecond="false"
                app:isShowMinute="true"
                app:isShowSecond="true"
                app:suffixGravity="center"
                app:suffixTextColor="#000000"
                app:suffixTextSize="20sp"
                app:timeTextColor="#000000"
                app:timeTextSize="20sp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/info_text_4"
                />
            <TextView
                android:id="@+id/time_remain"
                android:text="剩余时间："
                android:textSize="12sp"
                android:layout_alignTop="@+id/info_text_3"
                android:layout_alignLeft="@+id/cv_countdownViewTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>