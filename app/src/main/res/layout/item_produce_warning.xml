<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/rl_item"
    android:layout_marginTop="10dp"
    android:background="@drawable/card_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:textColor="@android:color/black"
        android:text="叠送一体机-PCB不足预警"
        android:textSize="12sp"
        android:padding="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_produce_line"
        android:textColor="@android:color/black"
        android:text="产线：H13"
        android:layout_below="@+id/tv_title"
        android:textSize="12sp"
        android:padding="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_make_process"
            android:textColor="@android:color/black"
            android:text="制程：叠送一体机"
            android:layout_below="@+id/tv_produce_line"
            android:textSize="12sp"
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_warning_info"
            android:textColor="@android:color/black"
            android:text="预警信息：锡膏机需要换瓶"
            android:layout_below="@+id/tv_make_process"
            android:textSize="12sp"
            android:padding="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
