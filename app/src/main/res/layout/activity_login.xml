<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLoginFormView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_welcomes"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_50"
        android:layout_marginTop="@dimen/px_40"
        android:src="@drawable/ic_logo"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_178"
        android:src="@drawable/ic_ams"
       />


    <EditText
            android:id="@+id/userName"
            android:layout_width="@dimen/px_888"
            android:layout_height="@dimen/px_127"
            android:layout_marginLeft="@dimen/px_50"
            android:layout_marginTop="@dimen/px_196"
            android:background="@color/textcolor"
            android:paddingLeft="@dimen/px_50"
            android:hint="@string/user"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/textcolor"
            android:textColorHint="#949494"
            android:textSize="12sp"/>
    <EditText
            android:id="@+id/password"
            android:layout_width="@dimen/px_888"
            android:layout_height="@dimen/px_127"
            android:layout_marginLeft="@dimen/px_50"
            android:background="@color/textcolor"
            android:layout_marginTop="@dimen/px_40"
            android:paddingLeft="@dimen/px_50"
            android:hint="@string/password"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColor="@color/textcolor"
            android:textColorHint="#949494"
            android:textSize="12sp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_50"
        android:textColor="@color/textcolor"
        android:layout_marginTop="@dimen/px_40"
        android:button="@drawable/checkbox_selector"
        android:text="@string/ji"
        />


        <Button
            android:id="@+id/bt_login"
            android:layout_width="@dimen/px_888"
            android:layout_height="@dimen/px_127"
            android:background="@drawable/btn_selector"
            android:layout_marginLeft="@dimen/px_50"
            android:layout_marginTop="@dimen/px_100"
            android:text="Login"
            android:textColor="#ffffff" />



</LinearLayout>
