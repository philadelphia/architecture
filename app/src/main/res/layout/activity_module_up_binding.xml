<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/appbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:orientation="vertical"
                android:padding="10px">


                <TextView
                    android:id="@+id/tv_work_order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10px"
                    android:text="工单："
                    android:textColor="#333333"
                    android:textSize="40px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_side"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="面别："
                        android:textColor="#333333"
                        android:textSize="40px" />


                    <TextView
                        android:id="@+id/tv_Line"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="线别："
                        android:textColor="#333333"
                        android:textSize="40px" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/px_10"
                    android:layout_marginTop="@dimen/px_10">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/px_20"
                        android:gravity="center"
                        android:text="上传到MES"
                        android:textSize="@dimen/px_40" />

                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/automatic_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/btn_upload"
                        android:layout_marginRight="@dimen/px_40"
                        android:layout_toLeftOf="@+id/btn_upload"
                        android:checked="false"
                        android:text="自动上传到MES"
                        android:textSize="@dimen/px_40" />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recy_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.delta.commonlibs.widget.statusLayout.StatusLayout
                    android:id="@+id/statusLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recy_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.delta.commonlibs.widget.statusLayout.StatusLayout>

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/showMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/c_000000"
            android:gravity="center_vertical"
            android:paddingBottom="40px"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:paddingTop="40px"
            android:text="提示"
            android:layout_gravity="bottom|left"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/px_40"
            android:visibility="gone" />

    </FrameLayout>


</LinearLayout>
