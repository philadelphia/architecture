<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/appbar" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_30"
            android:layout_marginLeft="@dimen/px_60"
            android:layout_marginRight="@dimen/px_60"
            android:layout_marginTop="@dimen/px_60"
            android:orientation="vertical">

            <include layout="@layout/layout_workorder_side_line" />


        </LinearLayout>



        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_feederMaintain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:enabled="false"
            android:gravity="center"
            android:text="Feeder保养" />
    </LinearLayout>


    <HorizontalScrollView
        android:id="@+id/hr_scrow"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recy_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.delta.commonlibs.widget.statusLayout.StatusLayout
                android:id="@+id/statusLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recy_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.delta.commonlibs.widget.statusLayout.StatusLayout>

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
