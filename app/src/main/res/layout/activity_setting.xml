<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/option_background"
    android:orientation="vertical">
    <include layout="@layout/appbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="@dimen/px_50"
        >

        <TextView
            android:id="@+id/setting_server_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_120"
            android:layout_alignParentTop="true"
            android:background="@drawable/selector_setting_button"
            android:gravity="center_vertical"
            android:paddingLeft="38px"
            android:text="配置服务器地址"
            android:textColor="@color/waring_editext"
            android:textSize="@dimen/px_40" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="26px"
            android:layout_height="46px"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="40px"
            android:layout_marginTop="50px"
            android:src="@drawable/ic_settingback" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="10px">


        <TextView
            android:id="@+id/setting_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_120"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/selector_setting_button"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.2"
            android:paddingLeft="38px"
            android:text="检查更新"
            android:textColor="@color/waring_editext"
            android:textSize="@dimen/px_40" />

        <ImageView
            android:layout_width="26px"
            android:layout_height="46px"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="40px"
            android:layout_marginTop="50px"
            android:src="@drawable/ic_settingback"/>

    </RelativeLayout>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/px_1"-->
        <!--android:background="@color/waring_editext"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_setting_button"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="10px">
    <TextView
        android:id="@+id/setting_cache"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_120"
        android:background="@drawable/selector_setting_button"
        android:gravity="center_vertical"
        android:lineSpacingMultiplier="1.2"
        android:paddingLeft="38px"
        android:paddingRight="40px"
        android:text="清除缓存"
        android:textColor="@color/waring_editext"
        android:textSize="@dimen/px_40" />
        <TextView
            android:id="@+id/tv_cache_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:text="0K"
            android:textColor="#333333"
            android:textSize="@dimen/px_40"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>
        <ImageView
            android:layout_width="26px"
            android:layout_height="46px"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="40px"
            android:layout_marginTop="50px"
            android:src="@drawable/ic_settingback" android:id="@+id/imageView2"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="10px">
        <TextView
            android:id="@+id/tv_speech"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_120"
            android:background="@drawable/selector_setting_button"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="1.2"
            android:paddingLeft="38px"
            android:paddingRight="40px"
            android:text="语音开关设置"
            android:textColor="@color/waring_editext"
            android:textSize="@dimen/px_40" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/sc_speech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="40px"
            android:layout_marginTop="50px" />

    </RelativeLayout>
</LinearLayout>