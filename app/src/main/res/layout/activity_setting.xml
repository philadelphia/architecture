<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/appbar"/>

    <TextView
        android:id="@+id/setting_server_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_20"
        android:layout_marginBottom="@dimen/px_10"
        android:layout_marginLeft="@dimen/px_10"
        android:layout_marginRight="@dimen/px_10"
        android:textSize="@dimen/px_40"
        android:paddingLeft="@dimen/px_50"
        android:paddingRight="@dimen/px_50"
        android:gravity="center_vertical"
        android:text="配置服务器地址"
        android:textColor="@color/waring_editext"
        android:lineSpacingMultiplier="1.2"
        android:background="@drawable/selector_setting_button"/>
    <!--<View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/waring_editext"/>-->
    <TextView
        android:id="@+id/setting_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_10"
        android:layout_marginBottom="@dimen/px_10"
        android:layout_marginLeft="@dimen/px_10"
        android:layout_marginRight="@dimen/px_10"
        android:textSize="@dimen/px_40"
        android:paddingLeft="@dimen/px_50"
        android:paddingRight="@dimen/px_50"
        android:gravity="center_vertical"
        android:text="检查更新"
        android:textColor="@color/waring_editext"
        android:lineSpacingMultiplier="1.2"
        android:background="@drawable/selector_setting_button"/>
    <!--<View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/waring_editext"/>-->
    <TextView
        android:id="@+id/setting_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_10"
        android:layout_marginLeft="@dimen/px_10"
        android:layout_marginRight="@dimen/px_10"
        android:textSize="@dimen/px_40"
        android:paddingLeft="@dimen/px_50"
        android:paddingRight="@dimen/px_50"
        android:gravity="center_vertical"
        android:text="清除缓存"
        android:textColor="@color/waring_editext"
        android:lineSpacingMultiplier="1.2"
        android:background="@drawable/selector_setting_button"/>


</LinearLayout>