<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/option_background">
    <include layout="@layout/appbar"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_50">
    <TextView
        android:id="@+id/setting_server_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_120"
        android:textSize="@dimen/px_40"
        android:paddingLeft="38px"
        android:gravity="center_vertical"
        android:text="配置服务器地址"
        android:textColor="@color/waring_editext"
        android:background="@drawable/selector_setting_button"/>

        <ImageView
            android:layout_width="26px"
            android:layout_height="46px"
            android:layout_marginTop="50px"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="40px"
            android:src="@drawable/ic_settingback"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1px"
        android:background="@color/waring_editext"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/setting_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_120"
        android:textSize="@dimen/px_40"
        android:paddingLeft="38px"
        android:gravity="center_vertical"
        android:text="检查更新"
        android:textColor="@color/waring_editext"
        android:lineSpacingMultiplier="1.2"
        android:background="@drawable/selector_setting_button"/>

        <ImageView
            android:layout_width="26px"
            android:layout_height="46px"
            android:layout_marginTop="50px"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="40px"
            android:src="@drawable/ic_settingback"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/waring_editext"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/setting_cache"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_120"
        android:textSize="@dimen/px_40"
        android:paddingLeft="38px"
        android:paddingRight="40px"
        android:gravity="center_vertical"
        android:text="清除缓存"
        android:textColor="@color/waring_editext"
        android:lineSpacingMultiplier="1.2"
        android:background="@drawable/selector_setting_button"/>

        <ImageView
            android:layout_width="26px"
            android:layout_height="46px"
            android:layout_marginTop="50px"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="40px"
            android:src="@drawable/ic_settingback"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1px"
        android:background="@color/waring_editext"/>

</LinearLayout>