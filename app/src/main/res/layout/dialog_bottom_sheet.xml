<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:background="#e0ffffff"
                                     android:orientation="vertical">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_sheet"
        android:layout_width="match_parent"
        android:padding="30px"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="60px"
        android:paddingTop="20px"
        android:gravity="center"
        android:background="#e0ffffff"
        android:orientation="horizontal"
        android:padding="10px">


        <Button
            android:id="@+id/bt_sheet_back"
            android:layout_width="152px"
            android:layout_height="70px"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@android:color/white"
            android:textSize="40px"/>
        <Button
            android:id="@+id/bt_sheet_select_cancel"
            android:layout_width="152px"
            android:layout_height="70px"
            android:layout_marginLeft="50px"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@android:color/white"
            android:textSize="40px"/>
        <Button
            android:id="@+id/bt_sheet_select_all"
            android:layout_width="152px"
            android:layout_height="70px"
            android:layout_marginLeft="50px"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:text="@string/check_all"
            android:textColor="@android:color/white"
            android:textSize="40px"/>

        <Button
            android:id="@+id/bt_sheet_confirm"
            android:layout_width="152px"
            android:layout_height="70px"
            android:layout_marginLeft="50px"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:text="@string/debit"
            android:textColor="@android:color/white"
            android:textSize="40px"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
