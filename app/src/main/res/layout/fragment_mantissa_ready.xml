<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10px"
    android:background="@drawable/card_background">

    <TextView
        android:id="@+id/tv_line_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:text="第一行数据"
        android:textColor="#000000"
        android:textSize="40px" />

    <TextView
        android:id="@+id/tv_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_line_name"
        android:padding="20px"
        android:text="第二行数据"
        android:textColor="#000000"
        android:textSize="40px" />

    <TextView
        android:id="@+id/tv_sides"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_order"
        android:padding="20px"
        android:text="第三行数据"
        android:textColor="#000000"
        android:textSize="40px" />

    <TextView
        android:id="@+id/tv_states"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sides"
        android:padding="20px"
        android:text="第四行数据"
        android:textColor="#000000"
        android:textSize="40px" />


    <!--这里右边的倒数计我是默认和左边的第三个和第四个高度保持一致的，数据少可自行更改-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp">

        <TextView
            android:gravity="center"
            android:id="@+id/time_remain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5px"
            android:text="上线剩余时间:"
            android:textColor="#000000"
            android:textSize="40px" />

        <com.delta.libs.CountTimeView
            android:id="@+id/cv_countView"
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            app:isCountUp="false"
            app:isShowDay="true"
            app:isShowHour="true"
            app:isShowMillisecond="false"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:suffixDay="天"
            app:suffixDayRightMargin="10px"
            app:suffixGravity="center"
            app:suffixHour=":"
            app:suffixMinute=":"
            app:suffixTextColor="#e61010"
            app:suffixTextSize="15sp"
            app:timeTextColor="#e60b0b"
            app:timeTextSize="18sp" />
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>