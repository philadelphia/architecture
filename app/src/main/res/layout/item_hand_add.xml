<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/rl_item"
    android:layout_marginTop="10dp"
    android:background="@drawable/card_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:text="料站Pass预警"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_line"
                android:textColor="@android:color/black"
                android:text="产线：H13"
                android:layout_below="@+id/tv_title"
                android:textSize="12sp"
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                 android:id="@+id/tv_material_station"
                 android:textColor="@android:color/black"
                 android:text="模组料站：06T021"
                 android:textSize="12sp"
                 android:padding="1dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/tv_line"
                 android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/tv_add_count"
                android:textColor="@android:color/black"
                android:text="预计Pass数量：2"
                android:layout_below="@+id/tv_material_station"
                android:textSize="12sp"
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_warning_info"
                android:textColor="@android:color/black"
                android:text="预警信息：201位置需要手补件"
                android:layout_below="@+id/tv_add_count"
                android:textSize="12sp"
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/time_remain"
                        android:text="预计剩余时间："
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content" />

                    <cn.iwgang.countdownview.CountdownView
                        android:id="@+id/cv_countdownViewTest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/time_remain"
                        android:layout_below="@+id/time_remain"
                        app:isShowDay="false"
                        app:isShowHour="true"
                        app:isShowMillisecond="false"
                        app:isShowMinute="true"
                        app:isShowSecond="true"
                        app:suffixGravity="center"
                        app:suffixTextColor="#000000"
                        app:suffixTextSize="20sp"
                        app:timeTextColor="#000000"
                        app:timeTextSize="20sp"
                        />
        </LinearLayout>
</RelativeLayout>