<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="@color/c_ffffff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/clean"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:text="手动请求清理列表"
            android:background="@color/background"
            android:textColor="@color/c_ffffff"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:layout_marginBottom="30px"
            android:padding="20px"
            android:textSize="40px"/>

        <Button
            android:id="@+id/deduct"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@color/background"
            android:textColor="@color/c_ffffff"
            android:layout_marginRight="30px"
            android:layout_marginLeft="10px"
            android:text="开始绑定"
            android:textSize="40px"
            />

        <TextView
            android:id="@+id/number"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:text="入库单号:"
            android:textColor="@color/c_000000"
            android:layout_marginLeft="30px"
            android:layout_marginTop="30px"
            android:layout_marginBottom="30px"
            android:padding="20px"
            android:textSize="40px"/>

        <TextView
            android:id="@+id/car"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:text="入库车:"
            android:textColor="@color/c_000000"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30px"
            android:padding="20px"
            android:textSize="40px"
            android:layout_below="@+id/clean"
            android:layout_toRightOf="@+id/deduct"
            android:layout_toEndOf="@+id/deduct"/>

    </RelativeLayout>

    <com.delta.commonlibs.widget.statusLayout.StatusLayout
        android:id="@+id/statusLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <HorizontalScrollView
                android:id="@+id/hr_scrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recy_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recy_contetn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </com.delta.commonlibs.widget.statusLayout.StatusLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginBottom="30px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout3">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bt_next"
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:text="下一个"
                android:textSize="40px"
                android:layout_marginRight="20px"
                android:background="@color/background"
                android:textColor="@color/c_ffffff"
                android:visibility="gone"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bt_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                android:textSize="40px"
                android:layout_marginLeft="20px"
                android:background="@color/background"
                android:textColor="@color/c_ffffff"
                android:visibility="gone"
                />
        </LinearLayout>




    </LinearLayout>

    <Button
        android:id="@+id/bt_submit"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:background="@color/background"
        android:textColor="@color/c_ffffff"
        android:textSize="40px"
        android:layout_alignBottom="@+id/linearLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:text="提交"/>

</RelativeLayout>

