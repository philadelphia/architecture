<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_check_main"
    android:background="@color/textcolor"
    >
    <include layout="@layout/appbar" />
    <com.delta.commonlibs.widget.statusLayout.StatusLayout
        android:id="@+id/statusLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_40"
        >
        <TextView
            android:id="@+id/cargon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cargon_text"
            style="@style/waring_text"
            />
        <TextView
            android:id="@+id/cargon_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80"
            android:layout_toRightOf="@id/cargon_text"
            android:layout_marginLeft="@dimen/px_20"
            style="@style/waring_text"
            android:layout_marginRight="@dimen/px_60"
            android:paddingLeft="@dimen/px_20"
            android:gravity="center_vertical"
            android:background="@drawable/ed_frame"

            />
        <TextView
            android:id="@+id/cargontv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cargonumber"
            android:layout_below="@id/cargon_text"
            android:paddingBottom="@dimen/px_20"
            android:paddingTop="@dimen/px_20"
            style="@style/waring_text"
            />
        <EditText
            android:id="@+id/cargoned"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80"
            android:background="@drawable/ed_frame"
            android:layout_toRightOf="@id/cargontv"
            android:layout_alignBottom="@id/cargontv"
            android:layout_alignTop="@id/cargontv"
            android:layout_toLeftOf="@+id/cargon_affirm"
            android:layout_marginRight="@dimen/px_60"
            android:paddingLeft="@dimen/px_20"
            android:gravity="center_vertical"
            android:layout_alignLeft="@id/cargon_tv"
            android:singleLine="true"
            android:inputType="number"

            />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/cargon_affirm"
            android:layout_width="@dimen/px_200"
            android:layout_height="@dimen/px_100"
            android:text="@string/cargon_affirm"
            android:layout_marginRight="@dimen/px_16"
            android:layout_alignParentRight="true"
            style="@style/button_style"
            android:layout_alignBottom="@id/cargontv"
            android:layout_alignTop="@id/cargontv"
            />


    </RelativeLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/main_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    </RelativeLayout>
    </LinearLayout>
    </com.delta.commonlibs.widget.statusLayout.StatusLayout>
</LinearLayout>