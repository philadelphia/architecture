<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_mianview"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/main_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_20"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_work"
            style="@style/waring_text"

            />
        <TextView
            android:id="@+id/ed_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_work"
            style="@style/waring_editext"
            />
        <TextView
            android:id="@+id/tv_pcb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/waring_text"
            android:text="@string/tv_pcb"
            android:layout_below="@id/ed_work"

            />
        <TextView
            android:id="@+id/ed_pcb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/waring_editext"
            android:layout_toRightOf="@id/tv_pcb"
            android:layout_below="@id/tv_work"
            />
        <TextView
            android:id="@+id/tv_machine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/waring_text"
            android:text="@string/tv_machine"
            android:layout_below="@id/tv_pcb"
            />
        <TextView
            android:id="@+id/ed_machine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/waring_editext"
            android:layout_below="@id/tv_pcb"
            android:layout_toRightOf="@id/tv_machine"
            />

    </RelativeLayout>
    <include layout="@layout/main_recyclerview"

        />



</LinearLayout>