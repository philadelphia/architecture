<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/rl_item"
    android:background="@drawable/card_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <TextView
                android:id="@+id/info_text"
                android:text="第一行数据"
                android:textSize="12sp"
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/info_text_2"
                android:text="第二行数据"
                android:layout_below="@+id/info_text"
                android:textSize="12sp"
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                 android:id="@+id/info_text_3"
                 android:text="第三行数据"
                 android:textSize="12sp"
                 android:padding="1dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/info_text_2"
                 android:layout_alignParentLeft="true"
            />

            <TextView
                android:id="@+id/info_text_4"
                android:text="第四行数据"
                android:layout_below="@+id/info_text_3"
                android:textSize="12sp"
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/info_text_5"
                android:text="第五行数据"
                android:layout_below="@+id/info_text_4"
                android:textSize="12sp"
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/info_text_6"
                android:text="第六行数据"
                android:layout_below="@+id/info_text_5"
                android:textSize="12sp"
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
<!--这里右边的倒数计我是默认和左边的第三个和第四个高度保持一致的，数据少可自行更改-->

            <TextView
                android:id="@+id/time_remain"
                android:text="剩余时间："
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <cn.iwgang.countdownview.CountdownView
                android:id="@+id/cv_countdownViewTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/time_remain"
                android:layout_below="@+id/time_remain"
                app:isShowDay="false"
                app:isShowHour="true"
                app:isShowMillisecond="false"
                app:isShowMinute="true"
                app:isShowSecond="true"
                app:suffixGravity="center"
                app:suffixTextColor="#000000"
                app:suffixTextSize="20sp"
                app:timeTextColor="#000000"
                app:timeTextSize="20sp"
                />

            </RelativeLayout>